                {% for annonce in annonces %}
                    <div class="col-md-4 py-2">
                        <div class="card shadow h-100 text-center bg-lightblue" {#style="width: 18rem;"#}>
                            {% if annonce.imgs|first %}
                                <img src="{{ annonce.imgs|first }}" class="card-img-top" alt="..."
                                     style="max-height: 200px">
                            {% else %}
                                <img src="img/600px-No_image_available.svg.png" class="card-img-top" alt="..."
                                     style="max-height: 200px">
                            {% endif %}

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ annonce.entete }}</h5>
                                <p class="card-text"><small class="text-muted">Mise Ã  jour
                                        le {{ annonce.dateModif|date('d/m/Y') }}</small></p>
