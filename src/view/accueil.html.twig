{% extends 'template.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block body %}
    {% include 'header.html.twig' %}
    <div class="container mb-4">
        <div class="row ">

            {% for rub in rubs %}
                <div class="col-lg-3 col-md-4 mt-3 ">
                    <div class="card text-center shadow h-100 bg-lightgreen">
