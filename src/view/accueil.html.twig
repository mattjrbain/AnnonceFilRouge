{% extends 'template.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block header %}
    {% embed 'header.html.twig' %}
        {% block rubActive %}active{% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="container mb-4">
        {% if message %}
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <strong>{{ message }}</strong>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="row ">


            {% for rub in rubs %}
                <div class="col-lg-3 col-md-4 mt-3 ">
                    <div class="card text-center shadow h-100 cardHome" style="min-width: 225px">
                        <div class="card-body d-flex flex-column">
                            <h1 class="card-text text-break text-capitalize "><a href="?action=annonces&param={{ rub.libelle }}" class="card-link   text-dark stretched-link">{{ rub.libelle }}</a></h1>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}