                            <h1 class="card-title">{{ rub.libelle }}</h1>
                            <p class="card-text">
                                <a id="" class="btn btn-primary stretched-link"
                                   href="?action=annonces&param={{ rub.libelle }}"
                                   role="button">Consulter</a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}