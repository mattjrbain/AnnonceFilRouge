{% extends 'template.html.twig' %}
{% block title %}Annonces {{ rub.libelle }}{% endblock %}
{% block header %}
    {% include 'header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container mb-4">
        <div class="row justify-content-center">
             <h2>Annonces "{{ rub }}"</h2>
        </div>
        <div class="row justify-content-center mb-2 sticky-top">
            <a href="javascript:history.go(-1)" type="button" class="btn btn-secondary shadow-sm">Page précédente</a>
        </div>
        <div class="row justify-content-center">
            {#                        {{ dump(annonces) }}#}

            {% if annonces is not empty %}
                {% for annonce in annonces %}
                    <div class="col-md-4 py-2">
                        <div class="card shadow h-100 text-center bg-lightblue" {#style="width: 18rem;"#}>
                            {% if annonce.imgs|first %}
                                <img src="{{ annonce.imgs|first }}" class="card-img-top" alt="..."
                                     style="max-height: 200px">
                            {% else %}
                                <img src="img/600px-No_image_available.svg.png" class="card-img-top" alt="..."
                                     style="max-height: 200px">
                            {% endif %}

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ annonce.entete }}</h5>
                                <p class="card-text"><small class="text-muted">Mise à jour
                                        le {{ annonce.dateModif|date('d/m/Y') }}</small></p>
                                <a id="" class="btn btn-primary mt-auto stretched-link shadow-sm{#align-self-end #}"
                                   href="?action=annonceUnique&param={{ annonce.annonceId }}"
                                   role="button">Consulter</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-info" role="alert">
                    <strong>Cette section est vide.</strong>
                </div>
            {% endif %}

        </div>
    </div>

{% endblock %}